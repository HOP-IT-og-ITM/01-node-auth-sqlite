  "main": "app.js",
  "scripts": {
    "build:backend": "tsc -p tsconfig/tsconfig.backend.json",
    "build:frontend": "tsc -p tsconfig/tsconfig.frontend.json",
    "build:private": "tsc -p tsconfig/tsconfig.private.json",
    "build": "npm run build:frontend && npm run build:backend && npm run build:private",
    "dev:backend": "tsc -p tsconfig/tsconfig.backend.json -w",
    "dev:frontend": "tsc -p tsconfig/tsconfig.frontend.json -w",
    "dev:private": "tsc -p tsconfig/tsconfig.private.json -w",
    "serve": "nodemon --watch dist dist/app.js",
    "prestart": "npm run build",
    "start": "concurrently -k -n BE,FE,SRV -c auto \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:private\" \"npm run serve\""
  },
